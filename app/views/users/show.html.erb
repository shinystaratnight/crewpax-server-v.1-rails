<%= content_tag_for :article, @user do %>
  <header>
    <div class="page-header">
      <h1 id="user_display_name">
        <%= @user.name %>
      </h1>
    </div>
  </header>
  <div class="row">
    <div class="col-md-7">
      <%= render "personalinfo" %>
      <%= render "links"     %>
    </div>
    <div class="col-md-5">
      <% if @user == current_user %>
        <%= render "notifications" %>
      <% end %>
      <%= render "union" %>
      <%= render "certificate" %>
      <%= render 'contacts' %>
    </div>
  </div>

<% end %>