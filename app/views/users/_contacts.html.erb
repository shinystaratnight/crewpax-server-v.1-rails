<div class="panel panel-default" id="user_info">
  <div class="panel-heading">
    <h3 class="panel-title">
      Contacts
    </h3>
  </div>
  <div class="panel-body">
      <dl>
        <dt>Name:</dt>
        <dd>
          <%= @user.name %>
        </dd>
        <dt>Phone:</dt>
        <dd>
          tel: <a href="tel:<%="#{@user.phone}"%>"><%="#{@user.phone}" %></a>
        </dd>
        <dt>Email:</dt>
        <dd>
          <%= mail_to @user.email %>
        </dd>
      </dl>   
    </div> 
  </div>
   
   
  <% if @user == current_user %>
    <p class="edit_user">
      <%= link_to 'Edit',  edit_user_path(@user), class: 'btn btn-block btn-lg btn-primary' %>      
    </p>
    <p class="edit_user">  
      <%= link_to new_job_path, class: 'btn btn-info btn-block btn-lg' do %>
        Post Job
      <% end %>
    </p> 
  <% else %>
    <p class="contact_user">
      <a href="tel:<%="#{@user.phone}"%>" class="btn btn-block btn-lg btn-primary">Call</a>
    </p>
    <p class="contact_user">
      <%= mail_to @user.email, 'Email', class: 'btn btn-block btn-lg btn-success' %>
    </p>    
  <% end %>
    <p class="edit_user">  
      <%= link_to "Back to Crew Board", users_path, class: 'btn btn-primary btn-block btn-lg' %>
    </p> 