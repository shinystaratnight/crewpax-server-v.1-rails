<h3>Availability</h3>
<table class="calendar">
  <thead>
    <tr>
      <% Date::ABBR_DAYNAMES.each do |name| %>
        <th>
          <div class="day">
            <%= name%>
          </div>
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%@calendar.weeks.each do |week| %>
      <tr>
        <% week.each do |day| %>
           <% d= Date.parse(day.date.to_s) %>
           
          <td><%=d.mday %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="calendar">
  <h2 id="month">
    <%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m") %>
    <%=h @date.strftime("%B %Y") %>
    <%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m") %>
  </h2>
  <%= calendar_for(@appointments, :year => @date.year, :month=> @date.month) do |t| %>
  <%= t.head('Sun','Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat') %>
  <%= t.day do |day, tasks| %>
    <%= day.day %>
    <% tasks.each do |task| %>
      <%= h(task.name) %>
    <% end %>
  <% end %>
<% end %>

</div>
