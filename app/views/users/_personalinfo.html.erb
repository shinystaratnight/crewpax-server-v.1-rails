<div class="field">
    <%= image_tag @user.image.url %>
</div>

<% if @user.has_vehicle? %>
  <div class="info_font">
   <i class="fa fa-check" style="color:green;"></i>
    <%= "Has a vehicle " %>
   </div>
<%end%>

<% if @user.has_traffic_control_ticket? %>
  <div class="info_font">
    <i class="fa fa-check" style="color:green;"></i>
    <%= ' Has a Traffic Control Ticket' %>
  </div>
<% end %>
<div class="panel panel-default" id="user_info">
  <div class="panel-heading">
    <h3 class="panel-title">
      Contacts
    </h3>
  </div>
 
  <div class="panel-body">
    <dl>
      <dt>Name</dt>
      <dd>
        <%= @user.name %>
      </dd>
      <dt>Phone</dt>
      <dd>
        <%= link_to @user.phone, "tel:#{@user.phone}" %>
      </dd>
      <dt>Email</dt>
      <dd>
        <%= mail_to @user.email %>
      </dd>
    </dl>   
  </div> 
</div>
 <p>
    <%= mail_to @user.email, 'Contact', class: 'btn btn-block btn-lg btn-success' %>
  </p>