<div class="reset_password container">
  <h3>Change your password</h3>

  <%= form_for(resource, url: user_password_path, html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>
    <div class="form-group">
      <%= f.label :password, "New password" %>

      <%= f.password_field :password, autofocus: true, autocomplete: "off" , class: "reset_info form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm new password" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "reset_info form-control" %>
    </div>
 
      <%= f.submit "Change my password", class: 'reset_pw_info btn btn-success' %>
   
  <% end %>
</div>